                            <option value="2030">2030</option>
                        </select>
                        <br />
                        <label data-error="wrong" data-success="right" for="orangeForm-region">Registeration Date</label>
                    </div>
                    <br />
                    <div class="md-form mb-5">
                        <i class="fas fa-envelope prefix grey-text"></i>
                        <input type="file" id="orangeForm-email" name="file" required>
                        <label data-error="wrong" data-success="right" for="orangeForm-region">Choose image</label>
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <input  type="submit" value="Add" class="btn btn-deep-orange"/>

                </div>
           }
        </div>
    </div>
</div>


